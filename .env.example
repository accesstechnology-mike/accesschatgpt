# OpenAI API Key
OPENAI_API_KEY=sk-proj-your-key-here

# Stripe Keys
STRIPE_SECRET_KEY=sk_live_your_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Neon Postgres Database
# Use the pooled connection for most operations (Prisma)
POSTGRES_PRISMA_URL=postgresql://user:password@host-pooler.region.aws.neon.tech/database?connect_timeout=15&sslmode=require
# Use non-pooled connection for migrations
POSTGRES_URL_NON_POOLING=postgresql://user:password@host.region.aws.neon.tech/database?sslmode=require

# Better Auth
BETTER_AUTH_SECRET=generate-a-random-secret-here
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Resend Email (for password reset)
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com

